{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["src/"]
    },
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
